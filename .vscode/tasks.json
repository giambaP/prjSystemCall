{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build BANCO",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/banco.c",
                "-o",
                "${workspaceFolder}/bin/banco"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "build GIOCATORE",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/giocatore.c",
                "-o",
                "${workspaceFolder}/bin/giocatore"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
}